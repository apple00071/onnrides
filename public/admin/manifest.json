{
  "name": "OnnRides Admin Dashboard",
  "short_name": "OnnRides Admin",
  "description": "Online admin dashboard for OnnRides vehicle rental service management (requires internet connection)",
  "start_url": "/admin/dashboard",
  "scope": "/admin/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#f26e24",
  "orientation": "portrait",
  "categories": ["business", "productivity", "utilities"],
  "dir": "ltr",
  "lang": "en-US",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "auto",
  "launch_handler": {
    "route_to": "existing-client",
    "navigate_existing_client": "never"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "shortcuts": [
    {
      "name": "Bookings",
      "short_name": "Bookings",
      "description": "View and manage bookings",
      "url": "/admin/bookings",
      "icons": [{ "src": "/admin/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Vehicles",
      "short_name": "Vehicles",
      "description": "Manage vehicle inventory",
      "url": "/admin/vehicles",
      "icons": [{ "src": "/admin/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Users",
      "short_name": "Users",
      "description": "Manage user accounts",
      "url": "/admin/users",
      "icons": [{ "src": "/admin/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "icons": [
    {
      "src": "/admin/apple-touch-icon-120x120.png",
      "sizes": "120x120",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/admin/apple-touch-icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/admin/apple-touch-icon-180x180.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/admin/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/admin/icon-192x192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/admin/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/admin/icon-512x512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/admin/screenshot-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard view of OnnRides Admin"
    }
  ]
} 